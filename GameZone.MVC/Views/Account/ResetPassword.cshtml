@model ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Account";
}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="row justify-content-center align-items-stretch">
            <div class="col-md-5">
                <div class="card shadow-sm p-4 h-100 border-success">
                    <h3 class="text-info mb-4">Change your password</h3>
                    <form asp-action="ResetPassword">

                        <div class="form-group mb-3">
                            <label asp-for="Password"><i class="bi bi-lock"></i> Password</label>
                            <input asp-for="Password" type="password" class="form-control mt-2" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"><i class="bi bi-capslock-fill"></i> Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control mt-2" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Reset button -->
                        <button class="btn btn-outline-success btn-block mb-3" type="submit">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}